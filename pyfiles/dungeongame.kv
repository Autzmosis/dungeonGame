<TitleScreen>:
	usr: usr
	size_hint_y: None
	size_hint_x: None
	height: 480
	width: 640
	pos_hint: {'center_x': .5, 'center_y': .5}
	AsyncImage:
		source: '../media/ssbackground.png'
		pos: 0, 0
	Label:
		text: '[b]Dungeons and Towns[/b]'
		markup: True
		font_size: 40
		pos_hint: {'center_x': .5, 'center_y': .8}
		font_name: 'Pixel'
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: None
		size_hint_x: None
		pos_hint: {'center_x': .5, 'center_y': .5}
		width: 150
		height: 50
		Label:
			id: hint
			text: 'Type \'new game\' or \'continue\' and press enter'
			font_size: 18
			font_name: 'Pixel'
		TextInput:
			id: usr
			multiline: False
			size_hint_y: None
			height: 25
			foreground_color: 1, 1, 1, 1
			font_name: 'Pixel'
			background_color: 0, 0, 0, 1
			cursor_blink: True
			cursor_color: 1, 1, 1, 1
			on_text_validate: root.__on_enter__(self, hint, app)
			focus: True

