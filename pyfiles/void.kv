<GameScreen>:
	objective: objective
	image: image
	textinput: textinput
	usr: usr
    main: main
    supp: supp
	size_hint_y: None
	size_hint_x: None
	height: 480
	width: 640
	pos_hint: {'center_x': .5, 'center_y': .5}
	AsyncImage:
        id: image
		source: '../images/flippybackground.png'
		pos: 1, 1
    FadeTranBox:
        id: main
        orientation: 'vertical'
        size_hint_x: None
        size_hint_y: None
        width: root.width
        height: 250
        opacity: 1
        canvas.before:
            Color:
                rgba: .6, .6, .6, .5
            Rectangle:
                pos: self.pos
                size: self.size
            #BorderImage:
            #    source: '../images/vines.png'
            #    pos: self.pos
            #    size: self.size
	    FadeLabel:
		    text: ' !-> Welcome'
		    id: objective
		    text_size: self.size
            pos: 1, 275
	        halign: 'left'
		    font_name: 'Pixel'
		    font_size: 18
		    markup: True
		    size_hint_y: None
		    size_hint_x: None
		    height: 25
            width: root.width
		    color: 1, 1, 1, 1
		    valign: 'middle'
            opacity: 1
	    TextInput:
		    id: textinput
		    multiline: True
		    text_size: 25
		    size_hint_y: None
		    height: 200
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
		    background_color: .5, .5, .5, .5
		    readonly: True
            pos: 1, 25
	    UsrInput:
		    textinput: textinput
		    #invBox: invBox
		    #atkBox: atkBox
		    #enemBox: enemBox
		    #enemyList: enemBox.enemyList
		    #inventory: invBox.inventory
		    #atkList: atkBox.atkList
		    #descrip: descrip
		    id: usr
		    multiline: False
		    size_hint_y: None
            height: 25
            pos: 1, 1
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
		    background_color: .5, .5, .5, .5
		    cursor_blink: True
		    cursor_color: 1, 1, 1, 1
		    on_text_validate: app.textRec.inputHandler(screen = root, string = self.text)
		    focus: True
    FadeTranBox:
        id: supp
        orientation: 'vertical'
        size_hint_y: None
        size_hint_x: None
        height: 100
        width: 120
        opacity: 0
        pos: 1, 100
        canvas.before:
            Color:
                rgba: .6, .6, .6, .5
            Rectangle:
                pos: self.pos
                size: self.size
            #BorderImage:
            #    source: '../images/vines.png'
            #    pos: self.pos
            #    size: self.size
        Button:
            text: 'Attack'
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
        Button:
            text: 'Skill List'
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
        Button:
            text: 'Inventory'
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
        Button:
            text: 'Run'
		    foreground_color: 1, 1, 1, 1
		    font_name: 'Pixel'
