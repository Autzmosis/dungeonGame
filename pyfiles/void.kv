<SplashScreen>:
	size_hint_y: None
	size_hint_x: None
	height: 480
	width: 640
	pos_hint: {'center_x': .5, 'center_y': .5}
	AsyncImage:
		source: '../images/ssbackground.png'
		pos_hint: {'center_x': .5, 'center_y': .5}
	Label:
		text: '[b]Created by[/b]'
		font_name: 'Pixel'
		font_size: 40
		halign: 'center'
		markup: True
		pos_hint: {'center_x': .5, 'center_y': .7}
	AsyncImage:
		width: 600
		height: 500/3
		source: '../images/mylogo.png'
		pos_hint: {'center_x': .5, 'center_y': .4}

<TitleScreen>:
	usr: usr
	hint: hint
	size_hint_y: None
	size_hint_x: None
	height: 480
	width: 640
	pos_hint: {'center_x': .5, 'center_y': .5}
	AsyncImage:
		source: '../images/ssbackground.png'
		pos: 1, 1
	Label:
		text: '[b]Dungeons and Towns[/b]'
		markup: True
		font_size: 40
		pos_hint: {'center_x': .5, 'center_y': .8}
		font_name: 'Pixel'
	BoxLayout:
		orientation: 'vertical'
		size_hint_y: None
		pos_hint: {'center_x': .5, 'center_y': .5}
		height: 65
		Label:
			id: hint
			text: 'Type \'new game\' or \'continue\' and press enter'
			font_size: 18
			font_name: 'Pixel'
			text_size: self.size
			valign: 'top'
			halign: 'center'
			pos_hint: {'center_x': .5}
		TextInput:
			id: usr
			multiline: False
			size_hint_y: None
			size_hint_x: None
			height: 25
			width: 150
			pos_hint: {'center_x': .5}
			foreground_color: 1, 1, 1, 1
			font_name: 'Pixel'
			background_color: 0, 0, 0, 1
			cursor_blink: True
			cursor_color: 1, 1, 1, 1
			on_text_validate: app.textRec.inputHandler(screen = root, string = self.text)
			focus: True

<Inventory>
	size_hint_x: None
	width: 180
	size_hint_y: None
	height: 290
	inventory: inventory
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: .5, .5, .5, .5
		Rectangle:
			size: self.size
			pos: self.pos
	Label:
		size_hint_y: None
		height: 20
		text: '>> [b]Inventory[/b] <<'
		markup: True
		halign: 'center'
		font_name: 'Pixel'
		font_size: 15
	Container:
		id: inventory
		cols: 1

